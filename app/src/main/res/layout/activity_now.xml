<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="sed.musical_structure.NowActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <ImageView android:id="@+id/MAB"
            android:src="@drawable/home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView android:id="@+id/SOB"
            android:src="@drawable/playlist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView android:id="@+id/ALB"
            android:src="@drawable/album"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView android:id="@+id/ARB"
            android:src="@drawable/artist"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


        <ImageView android:id="@+id/PLB"
            android:src="@drawable/payment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24dp"
        android:text="@string/NowPlaying" />

    <TextView
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@string/main_description"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

        <ImageView  android:src="@drawable/albumart"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingTop="16dp"
            android:background="@android:color/darker_gray"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="It's A Vibe"
            android:textAlignment="center"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="2 Chains"
            android:textAlignment="center"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/icons">

            <ImageView android:src="@drawable/rw"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_weight="1"/>
            <ImageView android:src="@drawable/play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_weight="1"/>
            <ImageView android:src="@drawable/ff"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>